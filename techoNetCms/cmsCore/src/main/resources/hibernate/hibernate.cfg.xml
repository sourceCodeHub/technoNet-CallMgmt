<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="tnsCmsSessionFactory">
		<property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
		<property name="hibernate.connection.password">tnscms</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tnscms</property>
		<property name="hibernate.connection.username">APP_OWNER</property>
		<property name="hibernate.default_schema">tnscms</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="hibernate.connection.autocommit">true</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>



		<mapping resource="com/tns/cms/core/hibernate/models/CodeDecode.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/Complaint.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/Contract.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/ContractProduct.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/Product.hbm.xml" />
		
		<mapping resource="com/tns/cms/core/hibernate/models/Customer.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/CustomerContact.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/CustomerFinancialDetails.hbm.xml" />
		
		<mapping resource="com/tns/cms/core/hibernate/models/EmailAlert.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/Employee.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/hibernate.cfg.xml" />		
		<mapping resource="com/tns/cms/core/hibernate/models/RepairComplaint.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/UserLogin.hbm.xml" />
		<mapping resource="com/tns/cms/core/hibernate/models/WorkflowHistory.hbm.xml" />


	</session-factory>
</hibernate-configuration>
